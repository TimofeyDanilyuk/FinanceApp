<Window x:Class="FinanceApp.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceApp"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="330" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button" x:Key="AuthButtonStyle">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF6A6A6A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="0 10 0 0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter x:Name="contentPresenter" 
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4A4A4A"/>
                                <Setter Property="BorderBrush" Value="#FF7A7A7A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2A2A2A"/>
                                <Setter Property="BorderBrush" Value="#FF5A5A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FF1E1E1E">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0 0 0 30"/>

            <TextBlock Text="Логин" 
                       Foreground="#FFCCCCCC" 
                       Margin="0 0 0 5"/>
            <TextBox x:Name="LoginTextBox" 
                     Background="#FF2D2D2D" 
                     Foreground="White" 
                     BorderBrush="#FF6A6A6A" 
                     BorderThickness="1" 
                     Padding="10" 
                     FontSize="14"/>

            <TextBlock Text="Пароль" 
                       Foreground="#FFCCCCCC" 
                       Margin="0 10 0 5"/>
            <PasswordBox x:Name="PasswordBox" 
                          Background="#FF2D2D2D" 
                          Foreground="White" 
                          BorderBrush="#FF6A6A6A" 
                          BorderThickness="1" 
                          Padding="10" 
                          FontSize="14"/>

            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Orientation="Horizontal"
                        Width="300">
                <Button x:Name="LoginButton" 
                        Content="Войти" 
                        Click="LoginButton_Click"
                        Style="{StaticResource AuthButtonStyle}"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Left"
                        Margin="0 10 0 0"/>

                <Button x:Name="RegisterButton" 
                        Click="RegisterButton_Click"
                        Content="Регистрация" 
                        Style="{StaticResource AuthButtonStyle}"               
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Right"
                        Margin="60 10 0 0"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>

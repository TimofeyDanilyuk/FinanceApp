<Window x:Class="FinanceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Учет финансов" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        FontFamily="Segoe UI"
        TextElement.Foreground="#DDDDDD">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="Padding" Value="15 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveNavButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <Border Grid.Column="0" Background="#252526" BorderThickness="0 0 1 0" BorderBrush="#444">
            <StackPanel>
                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBlock>
                        <materialDesign:PackIcon Kind="CasinoChip"  Width="40" Height="40" Foreground="Silver"/>
                        <TextBlock Text="CashFlow" Foreground="Silver" FontSize="18" FontFamily="Impact" Margin="0 -12 0 0"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Margin="10 20">
                    <Button x:Name="DashboardBtn" Content="Главная" Style="{StaticResource ActiveNavButtonStyle}"
                            Click="DashboardBtn_Click"
                            materialDesign:ButtonAssist.CornerRadius="2">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="TransactionsBtn" Content="Транзакции" Style="{StaticResource NavButtonStyle}"
                            Margin="0 5 0 0" Click="TransactionsBtn_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CashMultiple" Width="20" Height="20" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="CategoriesBtn" Content="Категории" Style="{StaticResource NavButtonStyle}"
                            Margin="0 5 0 0" Click="CategoriesBtn_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Shape" Width="20" Height="20" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="BudgetsBtn" Content="Бюджеты" Style="{StaticResource NavButtonStyle}"
                            Margin="0 5 0 0" Click="BudgetsBtn_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Finance" Width="20" Height="20" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="ReportsBtn" Content="Отчеты" Style="{StaticResource NavButtonStyle}"
                            Margin="0 5 0 0" Click="ReportsBtn_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChartAreaspline" Width="20" Height="20" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="ProfileSettingsBtn" Content="Настройки профиля" Style="{StaticResource NavButtonStyle}"
                            Margin="0 5 0 0" Click="ProfileSettingsBtn_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountEdit" Width="20" Height="20" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Контентная область -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Margin="10"/>
    </Grid>
</Window>

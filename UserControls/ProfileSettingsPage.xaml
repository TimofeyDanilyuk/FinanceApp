<UserControl x:Class="FinanceApp.UserControls.ProfileSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceApp.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="AuthButtonStyle">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF6A6A6A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="0 10 0 0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4">
                            <ContentPresenter x:Name="contentPresenter" 
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Content="{TemplateBinding Content}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4A4A4A"/>
                                <Setter Property="BorderBrush" Value="#FF7A7A7A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2A2A2A"/>
                                <Setter Property="BorderBrush" Value="#FF5A5A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Настройки профиля" 
                   FontSize="20" 
                   Foreground="Silver"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Padding="20" Margin="0 0 0 20" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Основная информация" 
                                   FontSize="16" 
                                   Foreground="Silver"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 10"/>

                        <TextBlock Text="Логин" 
                                   FontSize="12" 
                                   Foreground="Silver"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="LoginTextBox" 
                                 Tag="Логин"
                                 Margin="0 5" Height="30"/>

                        <TextBlock Text="Пароль" 
                                   FontSize="12" 
                                   Foreground="Silver"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="PasswordTextBox" 
                                 Tag="Пароль"
                                 Margin="0 5" Height="30"
                                 Visibility="Collapsed"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Tag="Пароль"
                                     Margin="0 5" Height="30" />
                        
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                            <CheckBox x:Name="ShowPasswordCheckBox" 
                                      Content="Показать пароль"
                                      Foreground="Silver"
                                      VerticalAlignment="Center"
                                      Margin="0 0 5 0"
                                      Checked="ShowPasswordCheckBox_Checked"
                                      Unchecked="ShowPasswordCheckBox_Unchecked"/>
                        </StackPanel>

                        <TextBlock Text="ФИО" 
                                   FontSize="12" 
                                   Foreground="Silver"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="FIOTextBox" 
                                 Tag="ФИО"
                                 Margin="0 5" Height="30"/>
                    </StackPanel>
                </Border>

                <Border Padding="20" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Telegram" 
                                   FontSize="16" 
                                   Foreground="Silver"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 10"/>

                        <TextBlock Text="Номер телефона" 
                                   FontSize="12" 
                                   Foreground="Silver"
                                   FontWeight="SemiBold"/>
                        
                        <TextBox x:Name="TelegramNumberTextBox" 
                                 Tag="Номер телефона"
                                 Margin="0 5" Height="30"/>

                        <TextBlock Text="Аккаунт Telegram" 
                                   FontSize="12" 
                                   Foreground="Silver"
                                   FontWeight="SemiBold"/>
                        
                        <TextBox x:Name="TLUserNameTextBox" 
                                 Tag="Имя пользователя Telegram"
                                 Margin="0 5" Height="30"/>

                        <TextBlock Text="ID чата в Telegram" 
                                   FontSize="12" 
                                   Foreground="Silver"
                                   FontWeight="SemiBold"/>
                        
                        <TextBox x:Name="TLChatIdTextBox" 
                                 Tag="ID чата в Telegram"
                                 Margin="0 5" Height="30"
                                 IsReadOnly="True"/>

                        <Button x:Name="SaveButton" 
                                Content="Сохранить изменения" 
                                HorizontalAlignment="Right"
                                Style="{StaticResource AuthButtonStyle}"
                                Margin="0 10 0 0" Width="170" Height="30"
                                Click="SaveButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
